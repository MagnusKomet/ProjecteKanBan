<Window x:Class="ProjecteKanBan.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjecteKanBan"
        mc:Ignorable="d"
        Title="Projecte KanBan" Height="450" Width="800">
    <Window.Resources>
        
        <Style TargetType="{x:Type Button}">
            <Setter Property="Background" Value="Orange" />
            <Setter Property="BorderBrush" Value="Crimson" />
            <Setter Property="FontSize" Value="20" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Margin" Value="5" />
        </Style>

        <Style TargetType="{x:Type Label}">
            <Setter Property="Background" Value="LightGray" />
            <Setter Property="FontSize" Value="20" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="Margin" Value="5" />
        </Style>
        
        
    </Window.Resources>

    <Grid Name="pnlMainGrid" Background="LightBlue">

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" MinHeight="37" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition Width="24*"/>
            <ColumnDefinition Width="25*" />
        </Grid.ColumnDefinitions>

        <Label Margin="10,0,0,0" Grid.ColumnSpan="2">\/__Llista__\/</Label>
        <ListBox Grid.Row="1" x:Name="ItemsListbox" Margin="10,0,0,10" Grid.ColumnSpan="2">

            <ListBox.ItemTemplate>

                <DataTemplate>

                    <StackPanel>

                        <TextBlock Grid.Column="0" Text="{Binding tasca}"/>
                        <TextBlock Grid.Column="1" Text="{Binding estat}"/>
                        <Separator/>

                    </StackPanel>

                </DataTemplate>

            </ListBox.ItemTemplate>
            
        </ListBox>

        <StackPanel Grid.Row="1" Grid.Column="2" Margin="5,0,0,0">
            <TextBox x:Name="txtName" Margin="0,5,5,0" Height="30"/>
            <ComboBox x:Name="cmboxEstat" Margin="0,5,5,0" Height="30"/>
            <Button x:Name="btnAdd" Margin="40,10,40,0" Click="ButtonAfegirItem_Click">Afegir Item</Button>
            <Button x:Name="btnDelete" Margin="60,30,60,0" Click="ButtonTreureItem_Click">Treure Item</Button>
            <Button x:Name="btnClear" Margin="80,30,80,0" Click="ButtonBuidarLlista_Click" Content="Buidar llista"/>
        </StackPanel>

    </Grid>
</Window>
